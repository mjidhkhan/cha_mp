{% extends '_layout.twig' %}
{% block title %}
	<section class="text-center">
    <div class="title">
      <h1 class="jumbotron-heading">{{ page }}</h1>
      <p class="lead ">{{ slogon }}</p>
    </div>
  </section>
{% endblock %}
{% block content %}
<div class="page-font login0">
    <div class="card login mb-5" style="max-width: 40rem;">
        <div class="card-header bg-transparent border-info">Login to your account</div>
            <div class="card-body text-success">
                <form class="form-signin" action="/pages/login.php" method="post">
                    <div class=" mb-4">
                    {% if type %}
                         {% autoescape %}
                    <div class="alert alert-{{ type }}" role="alert">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                    
                        <h3 class="alert-heading">{{ title }}</h3>
                         <hr>
                        <p>{{ message |raw  }}</p>
                    </div>
                    {% endautoescape %}
                     {% endif  %}
                      </div>
                    <div class="form-label-group">
                        <input type="email" id="inputEmail" name="email" class="form-control" placeholder="Email address" required autofocus>
                        <label for="inputEmail">Email address</label>
                    </div>
                    <div class="form-label-group">
                        <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Password" required>
                        <label for="inputPassword">Password</label>
                    </div>
                    <button class="btn btn-lg btn-outline-warning btn-block" type="submit">Login</button>
                    <input autofocus class="form-control" id="inputEmail" name="action" value="LOGIN"  hidden type="text">
    
                </form>
            </div>
            <div class="card-footer bg-transparent border-black">
            Don't have an account?
            <a class="btn btn-sm btn-outline-warning float-right" type="button" href="/pages/register.php">Register</a>
            </div>
        </div>
    </div>
    <br>
    <br>
</div>
{% endblock %}